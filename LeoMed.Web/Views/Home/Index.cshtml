@{
     ViewData["Title"] = "Home";
}


<div id="banner">
     <div class="container-fluid">
          <div class="col-lg-8 col-md-8 col-sm-8 col-xs-0">
               <div id="bannerText">
                    <h2>Medical Solution <br /> <span>Your Way</span> !</h2>
                    <p>...get medical help | simple | faster | personal</p>
               </div>
          </div>
          <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
          @if (!User.Identity.IsAuthenticated)
          {
               <div id="accountDetails">
                    <ul class="nav nav-tabs" role="tablist">
                         <li role="presentation" class="active"><a href="#login" aria-controls="home" role="tab" data-toggle="tab"><span class="fa fa-lock"></span> Login</a></li>
                         <li role="presentation"><a href="#register" aria-controls="register" role="tab" data-toggle="tab"><span class="fa fa-edit"></span> Register</a></li>
                    </ul>

                    <!-- Tab panes -->
                    <div class="tab-content">
                         <div role="tabpanel" class="tab-pane active" id="login">
                              <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                                   <h2>Login</h2>

                                   <div class="form-group">
                                        <label for="loginEmail">Email Address</label>
                                        <input type="email" class="form-control" id="loginEmail" name="Email" placeholder="Email">
                                   </div>
                                   <div class="form-group">
                                        <label for="loginPassword">Password</label>
                                        <input type="password" class="form-control" id="loginPassword" name="Password" placeholder="Password">
                                   </div>

                                   <button type="submit" class="btn btn-default">Login</button>

                                   <br />
                                   <br />
                                   <br />

                                   <hr />
                                   <h2>Use External Login</h2>
                              </form>
                         </div>
                         <div role="tabpanel" class="tab-pane" id="register">
                              <form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                                   <h2>Register</h2>

                                   <div class="form-group">
                                        <label for="regEmail">Email Address</label>
                                        <input type="email" class="form-control" id="regEmail" name="Email" placeholder="Email">
                                   </div>
                                   <div class="form-group">
                                        <label for="regPassword">Password</label>
                                        <input type="password" class="form-control" id="regPassword" name="Password" placeholder="Password">
                                   </div>

                                   <div class="form-group">
                                        <label for="regConfirmPassword">Confirm Password</label>
                                        <input type="password" class="form-control" id="regConfirmPassword" name="ConfirmPassword" placeholder="Password">
                                   </div>

                                   <button type="submit" class="btn btn-default">Register</button>

                                   <br />
                                   <br />
                                   <br />

                                   <hr />
                                   <h2>Use External Login</h2>
                              </form>
                         </div>
                    </div>

               </div>
          }

     </div>
     </div>
</div>